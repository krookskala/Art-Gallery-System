<br>
<h2 id="upcoming">Upcoming Events</h2>
<ul class="uk-grid-large uk-child-width-1-2 uk-child-width-1-1 uk-text-center" uk-sortable="handle: .uk-card" uk-grid>
    {{#each exhibitData.Exhibit}}
    <li>
        <div class="uk-card uk-card-default uk-card-body events">
            <p><strong>{{this.dataValues.exhibit_name}}</strong></p>
            <p class="event-date">{{this.dataValues.date}}</p>
            <p class="event-time">{{this.dataValues.time}}</p>
            <p class="event-description">{{this.dataValues.exhibit_descript}}</p>
            {{#if ../user}}
            <button 
                class="uk-button uk-button-primary bookmark-button" 
                data-id="{{this.dataValues.id}}"
                data-name="{{this.dataValues.exhibit_name}}"
                data-bookmarked="false">
                <span uk-icon="bookmark"></span>
                <span class="bookmark-text">Save</span>
            </button>
            {{/if}}
        </div>
    </li>
    {{/each}}
</ul>

<div class="uk-margin-large-top">
    <div class="uk-grid-small uk-child-width-auto uk-flex-center" uk-grid>
        <div>
            <div class="uk-text-meta">
                Showing {{pagination.startCount}} to {{pagination.endCount}} of {{pagination.totalItems}} events
            </div>
        </div>
    </div>
    <ul class="uk-pagination uk-flex-center uk-margin-medium-top">
        {{> pagination}}
    </ul>
</div>